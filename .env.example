# Database Configuration
DATABASE_URL=postgresql+asyncpg://orchestrator:password@localhost:5432/orchestrator

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=orchestrator-tasks

# OpenStack Configuration
OPENSTACK_AUTH_URL=http://localhost:5000/v3
OPENSTACK_USERNAME=admin
OPENSTACK_PASSWORD=secret
OPENSTACK_PROJECT_NAME=admin
OPENSTACK_PROJECT_DOMAIN_NAME=Default
OPENSTACK_USER_DOMAIN_NAME=Default
OPENSTACK_REGION_NAME=RegionOne

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security Configuration
API_KEYS=dev-key-1:write,dev-key-2:read
SECRET_KEY=change-this-in-production-to-a-secure-random-string

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Caching (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300

# Monitoring (Optional)
PROMETHEUS_PORT=9090
SENTRY_DSN=

# Ansible Configuration (Optional)
ANSIBLE_SSH_KEY_PATH=/keys/ansible_rsa
ANSIBLE_VERBOSITY=0

# Development Settings
DEBUG=false
